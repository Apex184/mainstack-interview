{
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2022"],
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "coverage", "*.d.ts", "*.tsbuildinfo", "tsconfig*.json"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
